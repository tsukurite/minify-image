{
  "version": "0.0.1",
  "main": "./main",
  "private": true,
  "scripts": {
    "clean": "rimraf ./main/*.js ./renderer/*.{css,html,js} ./releases",
    "dev": "npm ru gulp & npm ru webpack -- --debug --watch --devtool inline-source-map",
    "gulp": "gulp --require coffee-script/register",
    "lint": "eslint --ext .jsx .",
    "min": "npm ru gulp -- compile && npm ru webpack -- --optimize-minimize",
    "packaging": "node --harmony_arrow_functions ./electron-packager.js",
    "release": "npm ru clean && npm ru min && npm ru packaging && npm ru zip",
    "release-travis": "npm ru clean && npm ru min && npm ru packaging && npm ru zip >/dev/null",
    "start": "DEBUG=* electron .",
    "webpack": "webpack --progress --colors --display-error-details",
    "zip": "npm ru zip-win32 && npm ru zip-linux && npm ru zip-darwin",
    "zip-darwin": "(cd ./releases && zip -ry ./minify-image-osx-x86_64.zip ./minify-image-osx-x86_64)",
    "zip-linux": "(cd ./releases && zip -ry ./minify-image-linux-x86_64.zip ./minify-image-linux-x86_64)",
    "zip-win32": "(cd ./releases && zip -ry ./minify-image-win-x86_64.zip ./minify-image-win-x86_64)"
  },
  "dependencies": {
    "debug": "^2.2.0",
    "flux": "^2.0.3",
    "gulp-rename": "^1.2.2",
    "imagemin": "^3.2.0",
    "ipc-promise": "^0.1.1",
    "keymirror": "^0.1.1",
    "react": "^0.13.3"
  },
  "devDependencies": {
    "babel-core": "^5.5.8",
    "babel-loader": "^5.1.4",
    "co": "^4.5.4",
    "coffee-script": "^1.9.3",
    "css-loader": "~0.14.5",
    "electron-packager": "^4.1.3",
    "electron-prebuilt": "^0.27.3",
    "eslint": "^0.22.1",
    "eslint-plugin-react": "^2.5.2",
    "file-loader": "^0.8.4",
    "glob": "^5.0.10",
    "gulp": "^3.9.0",
    "gulp-babel": "^5.1.0",
    "gulp-cached": "^1.1.0",
    "gulp-coffee": "^2.3.1",
    "gulp-jade": "^1.0.1",
    "gulp-notify": "^2.2.0",
    "gulp-plumber": "^1.0.1",
    "gulp-sass": "^2.0.1",
    "gulp-watch": "^4.2.4",
    "node-libs-browser": "^0.5.2",
    "node-sass": "^3.2.0",
    "object-assign": "^2.1.1",
    "rimraf": "^2.4.0",
    "sass-loader": "^1.0.2",
    "source-map-support": "^0.3.2",
    "style-loader": "^0.12.3",
    "thunkify": "^2.1.2",
    "uglify-save-license": "^0.4.1",
    "url-loader": "^0.5.6",
    "webpack": "^1.10.1"
  },
  "engines": {
    "node": "^2.3.1",
    "npm": "^2.11.3"
  }
}
